@model List<ReedCountryViewModel>
@{
    ViewData["Title"] = "Country list Page";
}

<div class="text-center">
    <h1 class="display-4">Mantenimiento de paises</h1> 
</div>


<nav class="navbar bg-body-tertiary  row">

    <div class="col-8">
        <a type="button" class="btn btn-success" asp-controller="Country" asp-action="Create">Nuevo</a>
    </div>
    <div class="container-fluid col">
        <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Republica..." aria-label="Buscar" />
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>
</nav>


<!--Lista Paises -->

<div class="row mt-2">
    @if (Model.Count == 0)
    {
        <div class="text-center">
            <h4 class="display-4">No hay paises disponibles</h4>
        </div>
    }
    else
    {
        <Table class="table">
        
           <thead>
               <tr>
                    <th scope="row">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Codigo ISO</th>
                    <th scope="col">Cantidad De Indicadore</th>
                    <th></th>
               </tr>
           </thead>

           <tbody>
                <tr>
                    @foreach(var item in Model)
                    {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <th>@item.Name</th>
                        <th>@item.ISOCode</th>
                        <th>
                        <div class="mt-2">
                            <a class="btn btn-outline-warning float-end" asp-controller="Country" asp-action="Update" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-outline-danger float-end me-2"  asp-controller="Country" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                        </th>
                    </tr>

                    }
                    
                
           </tbody>
           
        
        </Table>
    }
</div>

